#!/usr/bin/env node

/* ------------------------------------------------
  *
  * export WINEARCH=win64
  * yarn add electron-winstaller
  *
  *
------------------------------------------------ */
const path = require('path');
const { createWindowsInstaller } = require('electron-winstaller');

function getInstallerConfig () {
  console.log('creating windows installer');
  const rootpath = path.join('./')
  const outputpath = path.join(rootpath, 'release-builds')

  return Promise.resolve({
    noMsi: true,
    authors: 'IZIGES',
    exe: 'csv-cleaner.exe',
    setupExe: 'csv-cleaner-win32-x64.exe',
    outputDirectory: path.join('.', '..', 'release-builds'),
    appDirectory: path.join('.', '..', 'releases', 'csv-cleaner-win32-x64')
    // setupIcon: path.join(rootpath, 'assets', 'icons', 'win', 'icon.ico')
  });
}

getInstallerConfig()
  .then(createWindowsInstaller)
  .catch((error) => {
    console.error(error.message || error)
    process.exit(1)
  });
